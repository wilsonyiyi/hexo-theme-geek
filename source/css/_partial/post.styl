.posts
    .replay-btn
        background-color: #4b5e7b;
        width: 40px;
        color: #fff;
        height: 40px;
        line-height: 40px;
        text-align: center;
        border-radius: 100%;
        position: absolute;
        &:hover
            opacity: 0.6;

    .post-title
        text-align: center;
        font-size: 24px;
        line-height: 40px;
        margin-bottom: 30px;
    
    .post-content
        a
             color: #699be9;

    .fhr
        margin-top: 60px;

    .highlight
        .gutter
            .hljs
                border-top-left-radius: 5px;
                border-bottom-left-radius: 5px;

    .highlight 
        .code
            .hljs
                border-top-right-radius: 5px;
                border-bottom-right-radius: 5px;